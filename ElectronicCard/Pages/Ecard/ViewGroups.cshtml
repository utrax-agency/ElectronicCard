@page
@model ElectronicCard.Pages.Ecard.GroupListModel
@{
    ViewData["Title"] = "Group List";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Group List - SavingsGroup Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #1e3c72;
            --secondary-color: #2a5298;
            --light-gray: #f8f9fa;
            --card-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-gray);
            color: #333;
            line-height: 1.6;
        }

        .navbar {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            padding: 1rem 0;
            border-radius: 0 0 1.5rem 1.5rem;
            box-shadow: var(--card-shadow);
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
            color: white !important;
        }

        .navbar .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .navbar .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.15);
                color: white !important;
            }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .status-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .status-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            transition: transform 0.3s ease;
            border-left: 4px solid var(--primary-color);
        }

            .status-card:hover {
                transform: translateY(-3px);
                box-shadow: var(--card-shadow);
            }

            .status-card h3 {
                font-size: 1.75rem;
                font-weight: 600;
                margin-bottom: 0.5rem;
                color: var(--primary-color);
            }

            .status-card p {
                color: #6c757d;
                margin-bottom: 0;
            }

        .groups-container {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        }

        .table {
            margin-bottom: 0;
        }

            .table th {
                font-weight: 600;
                color: var(--primary-color);
                padding: 1rem;
                border-bottom: 2px solid rgba(0,0,0,0.05);
            }

            .table td {
                padding: 1rem;
                vertical-align: middle;
            }

        .group-row {
            transition: all 0.2s ease;
        }

            .group-row:hover {
                background-color: rgba(0,0,0,0.02);
            }

        .badge {
            padding: 0.5rem 0.75rem;
            font-weight: 500;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            padding: 0.5rem 1.25rem;
            border-radius: 0.5rem;
            font-weight: 500;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--secondary-color) 0%, var(--primary-color) 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            }

        .btn-light {
            background-color: rgba(255, 255, 255, 0.9);
            border: none;
            color: var(--primary-color);
            font-weight: 500;
            padding: 0.5rem 1.25rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .btn-light:hover {
                background-color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #6c757d;
        }

            .empty-state i {
                color: #dee2e6;
                margin-bottom: 1.5rem;
            }

            .empty-state h4 {
                margin-bottom: 1rem;
                font-weight: 600;
            }

        @@media (max-width: 768px) {
            .page-header

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .page-header .actions {
            margin-top: 1rem;
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#"><i class="fas fa-piggy-bank me-2"></i>SavingsGroup Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                   
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/Ecard/Logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h1 class="mb-1">Savings Groups</h1>
                <p class="text-muted mb-0">Manage and monitor your savings groups</p>
            </div>
           
        </div>

        <!-- Status Cards -->
        <div class="status-cards">
            <div class="status-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1"><i class="fas fa-chart-line me-2"></i>Status</p>
                        <h3>Active</h3>
                    </div>
                    <div class="status-icon">
                        <i class="fas fa-check-circle fa-2x text-success opacity-50"></i>
                    </div>
                </div>
            </div>

            <div class="status-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1"><i class="fas fa-user me-2"></i>Role</p>
                        <h3>@Model.UserRole</h3>
                    </div>
                    <div class="status-icon">
                        <i class="fas fa-user-shield fa-2x text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Groups List -->
        <div class="groups-container">
            @if (Model.Groups.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col"><i class="fas fa-users me-2"></i>Group Name</th>
                                <th scope="col"><i class="fas fa-user-tie me-2"></i>Chairman</th>
                                <th scope="col">Status</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.Groups)
                            {
                                <tr class="group-row">
                                    <td class="fw-medium">@group.Group_Name</td>
                                    <td>@group.Chairman_FirstName</td>
                                    <td>
                                        <span class="badge bg-success rounded-pill">
                                            <i class="fas fa-circle me-1" style="font-size: 0.6em;"></i>Active
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="/Ecard/ViewMembers"
                                           asp-route-id="@group.Id"
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-users-slash fa-4x"></i>
                    <h4>No Groups Found</h4>
                    <p class="text-muted mb-4">Start by creating your first savings group.</p>
                    @if (User.IsInRole("Chairman"))
                    {
                        <a href="/Ecard/Home" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create New Group
                        </a>
                    }
                </div>
            }
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>