@page
@model ElectronicCard.Pages.Ecard.Register.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - SavingsGroup Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .hero-section {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 2rem 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .main-container {
            background-color: white;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            padding: 2rem;
            margin: 0 auto 2rem;
            max-width: 1000px;
        }

        .form-control {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #2a5298;
            box-shadow: 0 0 0 3px rgba(42, 82, 152, 0.2);
        }

        .form-select {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(42, 82, 152, 0.2);
        }

        .form-label {
            font-weight: 500;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .invalid-feedback {
            font-size: 0.875rem;
            color: #dc3545;
        }

        .password-requirements {
            font-size: 0.875rem;
            color: #718096;
            margin-top: 0.5rem;
        }

        .password-requirements ul {
            padding-left: 1.25rem;
            margin-top: 0.25rem;
        }

        .password-requirements li {
            margin-bottom: 0.25rem;
        }

        .login-link {
            color: #2a5298;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .login-link:hover {
            color: #1e3c72;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="container">
            <h1 class="display-6">Register</h1>
            <p>Join our platform to manage savings effectively.</p>
        </div>
    </div>

    <div class="container">
        <div class="main-container">
            <form method="post" class="row g-3 needs-validation">

                <div class="col-md-6">
                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                    <input asp-for="Input.FirstName" 
                           class="form-control" 
                           placeholder="First Name"
                           required
                           maxlength="50"
                           pattern="^[a-zA-Z\s\-']+$" />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.FirstName"></span>
                        First name is required and can only contain letters, spaces, hyphens and apostrophes.
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.LastName" class="form-label">Last Name</label>
                    <input asp-for="Input.LastName" 
                           class="form-control" 
                           placeholder="Last Name"
                           required
                           maxlength="50"
                           pattern="^[a-zA-Z\s\-']+$" />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.LastName"></span>
                        Last name is required and can only contain letters, spaces, hyphens and apostrophes.
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="Input.PhoneNumber" 
                           class="form-control" 
                           placeholder="Phone Number"
                           required
                           maxlength="10"
                           pattern="^\+?[0-9\-\(\)\.]{10}$" />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.PhoneNumber"></span>
                        Please enter a valid phone number (10 digits).
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <input asp-for="Input.Email" 
                           type="email" 
                           class="form-control" 
                           placeholder="Email Address"
                           required
                           maxlength="100" />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.Email"></span>
                        Please enter a valid email address.
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" 
                           type="password" 
                           class="form-control" 
                           placeholder="Password"
                           required
                           minlength="6"
                           maxlength="128"
                           />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.Password"></span>
                    </div>
                    <div class="password-requirements">
                        Password must contain:
                        <ul>
                            <li>At least 6 characters</li>
                            <li>One uppercase letter</li>
                            <li>One lowercase letter</li>
                            <li>One number</li>
                            <li>One special character ($!%*?&)</li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" 
                           type="password" 
                           class="form-control" 
                           placeholder="Confirm Password"
                           required />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.ConfirmPassword"></span>
                        Passwords do not match.
                    </div>
                </div>

                <div class="col-md-12">
                    <label asp-for="Input.Role" class="form-label">Role</label>
                    <select asp-for="Input.Role" class="form-select" required>
                        <option value="">Select a role</option>
                        <option>Chairman</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a role.
                    </div>
                </div>

                <div class="col-md-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary w-50">Register</button>
                </div>

                <div class="col-12 text-center mt-3">
                    <p class="mb-0">
                        Already have an account? <a class="login-link" asp-page="/Ecard/Login">Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/additional-methods.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

        <script>
            // Enable client-side validation
            (function () {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
            })();
        </script>
    }


</body>
</html>

